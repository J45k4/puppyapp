{
	"name": "puppynet",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "bun --watch --env=PUBLIC_* --port 4222 ./src/index.html",
		"build": "bun build src/index.html --outdir ../core/http_assets/ --entry-naming '[name].[ext]' --chunk-naming '[name].[ext]' --asset-naming '[name].[ext]' --env=PUBLIC_*",
		"check": "tsc --noEmit"
	},
	"devDependencies": {
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
